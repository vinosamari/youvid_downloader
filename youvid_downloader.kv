<MainLayout>:
    link:link 
    butt1:butt1
    cols:1
    
    Label:
        text:"Youvid Downloader"
        text_size:self.size
        font_size:80
        # size_hint:0.5,0.5
        size_hint_y:.5
        halign:'center'
        valign:'center'
        font_name:'Concept'
        background_color:0.776,0.180,0.180,0.8
        canvas.before:
            Color:
                rgba:self.background_color
            Rectangle:
                size:self.size
                pos:self.pos
        
        


    TextInput:

        hint_text:'Paste Download Link Here'
        hint_text_size:5
        font_size:30
        multiline:False
        # font_size:30
        size_hint:0.2,0.2
        id:link 
        font_name:'Bertina'
        focus:True 

    Button:
        text:'Download Video(mp4)'
        background_color:1,0,0,1
        font_size:35
        size_hint:0.3,0.2
        font_name:'Concept'
        text_size:self.size 
        valign:'center'
        halign:'center'
        on_release:root.download_button()
        id:butt1
        

    Button:
        text:'Download Mp3'
        background_color:1,0,0,0.8
        font_size:35
        size_hint:0.15,0.15
        font_name:'Concept'
        text_size:self.size 
        valign:'center'
        halign:'center'
        on_release:root.download_mp3_button()
        id:butt2


    BoxLayout:
        orientation:'horizontal'
        size_hint_y:.15

        Button:
            text:"Help"
            background_color:1,0,0,0.6
            size_hint:0.2,1
            font_name:'Concept'
            font_size:20
            valign:'center'
            halign:'center'
            on_release:root.help_popup()

        Button:
            text:"Refresh"
            background_color:0,1,0,0.75
            size_hint:0.8,1
            font_size:20   
            font_name:'Concept'
            # text_size:self.size
            valign:'center'
            halign:'center'
            on_release:root.refresh_button()

    