<MainLayout>:
    link:link 
    butt1:butt1
    cols:1
    
    Label:
        text:"Youvid Downloader"
        text_size:self.size
        font_size:80
        size_hint:0.5,0.5
        halign:'center'
        valign:'center'
        font_name:'Concept'
        background_color:0.75,0.2,0,0.45
        canvas.before:
            Color:
                rgba:self.background_color
            Rectangle:
                size:self.size
                pos:self.pos
        
        


    TextInput:

        hint_text:'Paste Download Link Here'
        hint_text_size:5
        font_size:30
        multiline:False
        # font_size:30
        size_hint:0.2,0.2
        id:link 
        font_name:'Bertina'

    Button:
        text:'Download'
        background_color:0.43,0.123,0.5,0.6
        font_size:50
        size_hint:0.3,0.3
        font_name:'Concept'
        text_size:self.size 
        valign:'center'
        halign:'center'
        on_release:root.download_button()
        id:butt1

    BoxLayout:
        orientation:'horizontal'
        size_hint_y:.15

        Button:
            text:"Help"
            background_color:0.43,0.123,0.5,0.6
            size_hint:0.3,1
            font_name:'Concept'
            font_size:25
            valign:'center'
            halign:'center'
            on_release:root.help_popup()

        Button:
            text:"Refresh"
            background_color:0,1,0,0.85
            size_hint:0.7,1
            font_size:25
            font_name:'Concept'
            # text_size:self.size
            valign:'center'
            halign:'center'
            on_release:root.refresh_button()

    